# Headers for better LLM/AI crawler support

/*
  # Security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # AI/LLM friendly headers
  X-Content-Type: text/html
  X-AI-Crawlable: true
  X-LLM-Friendly: true
  X-Content-Purpose: educational-documentation
  
  # Cache control
  Cache-Control: public, max-age=3600

/claude-code-guide.md
  Content-Type: text/markdown; charset=utf-8
  X-Content-Type: text/markdown
  X-AI-Content: true
  X-LLM-Optimized: true
  X-Content-Structure: comprehensive-guide
  X-Target-Audience: developers, ai-systems, search-engines
  Cache-Control: public, max-age=7200

/sitemap.xml
  Content-Type: application/xml; charset=utf-8
  Cache-Control: public, max-age=86400

/robots.txt
  Content-Type: text/plain; charset=utf-8
  Cache-Control: public, max-age=86400

# Static assets
/claude_code_*.png
  Content-Type: image/png
  Cache-Control: public, max-age=31536000

/favicon.ico
  Content-Type: image/x-icon
  Cache-Control: public, max-age=31536000